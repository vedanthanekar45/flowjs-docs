@startuml
title Deployment Diagram: Scene Integration System

skinparam componentStyle uml2

node "User Device (Browser)" {
  artifact "Frontend App" as app

  node "flow.js Modules" {
    artifact "SceneLoader"
    artifact "ModelImporter"
    artifact "MaterialHandler"
    artifact "LightingManager"
    artifact "EnvironmentHandler"
    artifact "OrbitControlsHandler"
    artifact "RaycasterHandler"
    artifact "Renderer"
  }

  node "Three.js Library" {
    artifact "WebGLRenderer"
  }

  ' Internal app wiring
  app --> SceneLoader
  SceneLoader --> ModelImporter
  SceneLoader --> MaterialHandler
  SceneLoader --> LightingManager
  SceneLoader --> EnvironmentHandler
  SceneLoader --> OrbitControlsHandler
  SceneLoader --> RaycasterHandler
  SceneLoader --> Renderer
  Renderer --> WebGLRenderer
}

' External asset source
node "Asset Source / File System" {
  artifact "models"
  artifact "textures"
  artifact "hdri"
}

' File usage relationships
ModelImporter --> models : reads
MaterialHandler --> textures : reads
EnvironmentHandler --> hdri : reads

@enduml
